{% set menu_links = [
  {'link' : 'about.html', 'title' : 'Quem somos', 'current' : ''},
  {'link' : 'contact.html', 'title' : 'Contato', 'current' : ''},
  {'link' : 'faq.html', 'title' : 'FAQ', 'current' : ''},
] 
%}
<h3 class="hidden">Topbar Menu</h3>
<ul class="menu menu-topbar topbar-menu">
  {% for link in menu_links %}
    <li class="leaf{% if loop.first %} first{% endif %}{% if loop.last %} last{% endif %}">
      <a href="{{ link.link }}" class="{{ link.current }}">{{ link.title }}</a>
    </li>
  {% endfor %}
</ul>