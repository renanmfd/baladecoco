    'info' => t('SSL Certificate'),
    'cache' => DRUPAL_CACHE_GLOBAL,
  );
  $blocks['bc_copyright'] = array(
    'info' => t('Copyright'),
    'cache' => DRUPAL_CACHE_GLOBAL,
  );
  $blocks['bc_logo'] = array(
    'info' => t('Logo'),
    'cache' => DRUPAL_CACHE_GLOBAL,
  );
  $blocks['bc_pres_logo'] = array(
    'info' => t('Presentation Logo'),
    'cache' => DRUPAL_CACHE_GLOBAL,
  );
  return $blocks;
}

